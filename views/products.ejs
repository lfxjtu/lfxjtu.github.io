<html>
    <head>
        <%- include('partials/header1.ejs') %> 
    </head>
    <body>
        <%- include('partials/navbar1.ejs') %>
        <div class="container">
            <h1>This is the products page.</h1>

            <div class="row">
                <% if (ProductsData.length !== 0) { 
                    ProductsData.forEach(function(data) { 
                        let imagePath = "public/images/" + data.name + ".jpg" %>
                        <div class="col-md-4">
                            <div class="card mb-4 shadow-sm">
                                <img src=<%= imagePath %> alt= <%= data.name %> style="width: 100%; height: 250px; object-fit: cover;">
                                <div class="card-body">
                                    <p class="card-text">
                                        <!-- <strong>ID:</strong> <%= data.id %><br> -->
                                        <strong>Name:</strong> <%= data.name %><br>
                                        <strong>Stock:</strong> <%= data.stock %><br>
                                        <strong>Price:</strong> <%= data.price %><br>
                                        <strong>Unit:</strong> <%= data.unit %><br>
                                    </p>
                                </div>
                            </div>
                        </div>
                    <% }); 
                } %>
            </div>
        </div>
    </body>
</html>
