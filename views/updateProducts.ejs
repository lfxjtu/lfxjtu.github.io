<html>
    <head>
        <%- include('partials/header1.ejs') %>
        <style>
            body {
                font-family: Arial, sans-serif;
                background-color: #f4f4f4;
            }
    
            .container {
                max-width: 400px;
                margin: 0 auto;
                padding: 20px;
                background: #fff;
                border-radius: 5px;
                box-shadow: 0px 0px 10px 0px rgba(0,0,0,0.1);
                margin-top: 50px;
            }
    
            h1 {
                text-align: center;
                margin-bottom: 20px;
            }
    
            form {
                display: flex;
                flex-direction: column;
            }
    
            input {
                padding: 10px;
                margin-bottom: 10px;
                border: 1px solid #ccc;
                border-radius: 5px;
                transition: border-color 0.3s;
                font-size: 16px;
            }
    
            input[type="text"]:focus,
            input[type="password"]:focus {
                border-color: #007bff;
            }
    
            input[type="submit"] {
                background-color: #007bff;
                color: #fff;
                font-weight: bold;
                cursor: pointer;
                transition: background-color 0.3s;
            }
    
            input[type="submit"]:hover {
                background-color: #0056b3;
            }
    
            h4 {
                text-align: center;
                margin-top: 20px;
            }
    
            a {
                color: #007bff;
                text-decoration: none;
            }
    
            a:hover {
                text-decoration: underline;
            }
        </style>
    </head>
    <body>
        <%- include('partials/navbar4.ejs') %>
        <div class="container" style="max-width: 700px;">
            <h1>Update an existing product</h1>
            <form method="POST" >
                <br>
                <label for="name">Product Name</label>
                <input type="text" id="name" placeholder="Enter product name" name="name" value="<%= productsData.product.name %>">
                <label for="stock">Product stock level</label>
                <input type="stock" id="stock" placeholder="Enter product stock" name="stock" value="<%= productsData.product.stock %>">
                <label for="price">Price</label>
                <input type="text" id="price" placeholder="Enter product price" name="price" value="<%= productsData.product.price %>">
                <label for="unit">Unit</label>
                <input type="text" id="unit" placeholder="Enter product price unit" name="unit" value="<%= productsData.product.unit %>">
                <label for="categoryId">Select category</label>
                <select id="categoryId" name="categoryId">
                    <% if (productsData.categories.length != 0) { %>
                        <% let categories = productsData.categories; %>
                        <% categories.forEach((category) => { %>
                            <option value="<%= category.id %>" <%= category.id === productsData.product.categoryId ? 'selected' : '' %>><%= category.name %></option>
                            <% })}; %>
                </select>                
                <label for="imageUrl">Select an image from your local machine</label>
                <input type="text" id="imageUrl" name="imageUrl" value="<%= productsData.product.imageUrl %>">
                <input type="submit"></input>
            </form>
        </div>
    </body>
</html>